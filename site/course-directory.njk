---
layout: default
meta_title: 'Course Directory'
title: 'Course Directory'
---


<main id="main" class="main flex flex-1 flex-col focus:outline-none" tabindex="-1">
      <section class="bg-white section-rounded pt-64 pb-24">
         <div class="inner">
            <div>
               <h2 class="my-8">{{title}}</h2>
               <span>Jump to:</span> <a href="#">Courses</a> <a href="#">Apprenticeships</a>
            </div>
            <div class="filters-sidebar">
               filters
            </div>
            <div class="main-content">
               <div class="mt-12  mx-auto lg:max-w-none">
               {% for item in courses %}
                  {% if item.isActive and item.courseType !== 'Apprenticeships' %}
                        
                           <div class="flex rounded-lg shadow-lg overflow-hidden my-6">
                              <a class="border-none" href='{{ item.slug.current }}'>
                              <div class="flex-shrink-0">
                                 <img class="h-48 w-full object-cover" src="{{item.featuredImage}}" alt="">
                              </div>
                              <div class="bg-white flex flex-col justify-around ml-8 py-4 w-9/12">
                                 <div>
                                    <div class="px-1 flex">
                                       <a href="#" class="p-2 bg-red-100 text-white font-bold rounded block font-heading text-sm leading-sm">Coding</a>
                                    </div>
                                    <a href="{{item.slug.current}}" class="block mt-2">
                                    <p class="text-xl font-semibold text-blue-200">
                                       {{item.title}}
                                    </p>
                                    </a>
                                 </div>
                                 <div class="flex items-center w-full flex-wrap">
                                    <div class="w-6/12">
                                       <p class=" flex text-sm font-medium text-gray-900">
                                       <span class="mr-2"><img style="height: 25px;" src="../../images/course-directory/Graduation-Cap-Icon.svg" alt="{{item.courseType}}" /></span>
                                          {{item.courseType}}
                                       </p>
                                    </div>
                                    <div class="w-6/12">
                                       <p class="text-sm font-medium text-gray-900">
                                       Duration {{item.level}}
                                       </p>
                                   </div>
                                    <div class="w-6/12">                                   
                                       <p class="text-sm font-medium text-gray-900">
                                          {{item.courseType}}
                                       </p>
                                    </div>
                                    <div class="w-6/12">                                   
                                       <p class="text-sm font-medium text-gray-900">
                                          Full Time
                                       </p>
                                    </div>
                                 </div>
                              </div>
                              </a>
                           </div>
                        
                  {% endif %}
               {% endfor %}
               </div>
            </div>
         </div>
      </section>

      <section class="relative overflow-hidden bg-blue-200">
         <object type="image/svg+xml" data="../images/patterns/3.svg" class="hidden md:block absolute pattern pattern-3"></object>
            <div class="inner relative z-10">
            <div class="mt-24 mb-32">
               {% include "components/apprenticeships/apprenticeships-component.njk" %}
            </div>
            </div>
         <object type="image/svg+xml" data="../images/patterns/4.svg" class="hidden md:block absolute bottom-0 pattern pattern-4"></object>
      </section>
   </main>
</div>

