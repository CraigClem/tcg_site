---
layout: default
---


<div class="container max-w-full md:pt-22 pt-20">
  <div class="hero relative bg-white">
    <img src="../images/banner-1.png" alt="Apprenticeships hero image" class="sm:block hidden h-full w-full hero-desktop"/>
    <img src="../images/group-13.png" alt="Apprenticeships hero image" class="sm:hidden block h-full w-full hero-mobile"/>
    <div class="absolute top-0 w-full h-full">
      <div class="flex flex-col justify-center items-center md:py-24 w-full h-full">
        <div class="max-w-2xl mx-auto px-4 lg:mb-8">
          <h1 class="text-center text-white mb-0 text-5xl leading-5xl max-w-md md:max-w-full">Course Directory</h1>
        </div>
      </div>
    </div>
  </div>
  <main id="main" class="main flex flex-1 flex-col focus:outline-none bg-white" tabindex="-1">
    <div class="bg-white">
      <div class="inner">
         {% for course in courseTypes %}
            <h2>{{ course.courseType }}</h2>
             <div class="mt-12 max-w-3xl mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
            {% for item in courses %}
               {% if item.courseType === course.courseType %}
               <a href='{{ item.slug.current }}'>
                  <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
                     <div class="flex-shrink-0">
                        <img class="h-48 w-full object-cover" src="https://images.unsplash.com/photo-1547586696-ea22b4d4235d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1679&q=80" alt="">
                     </div>
                     <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                        <div class="flex-1">
                           <a href="{{item.slug.current}}" class="block mt-2">
                           <p class="text-xl font-semibold text-blue-200">
                              {{item.title}}
                           </p>
                           <p class="mt-3 text-base text-gray-500">
                             {{ item.excerpt }}
                           </p>
                           </a>
                        </div>
                        <div class="mt-6 flex items-center">
                           <div class="flex-shrink-0">
                           <a href="#">
                              <span class="sr-only">{{item.qualification}}</span>
                           </a>
                           </div>
                           <div class="ml-3">
                           {% if item.level %}
                           <p class="text-sm font-medium text-gray-900">
                              <a href="#" class="hover:underline">
                                 Level {{item.level}}
                              </a>
                           </p>
                           {% endif %}
                           </div>
                        </div>
                     </div>
                  </div>
               </a>
               {% endif %}
            {% endfor %}
            </div>
         {% endfor %}
      </div>
    </div>
   </main>
</div>

